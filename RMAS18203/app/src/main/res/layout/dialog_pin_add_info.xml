<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uneti informacije o objektu"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/obj_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Naziv"
            android:background="@color/lightpurple"
            android:inputType="textMultiLine"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Izabrati tip objekta:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        />
    <Spinner
        android:id="@+id/objType_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/lightpurple"
        android:prompt="@string/objType_prompt"
        android:layout_marginTop="0dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/obj_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Opis"
            android:background="@color/lightpurple"
            android:inputType="textMultiLine"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Izabrati tip aktivnosti dostupnih u objektu:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        />
    <Spinner
        android:id="@+id/objPurpose_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/lightpurple"
        android:prompt="@string/objPurpose_prompt"
        android:layout_marginTop="0dp" />

<!--    <Button-->
<!--        android:id="@+id/btnAddLatLng"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="50dp"-->
<!--        android:background="@drawable/round_btn"-->
<!--        android:text="preuzmi"-->
<!--        android:textSize="16dp"-->
<!--        android:textStyle="bold"-->
<!--        android:layout_gravity="end"-->
<!--        />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geo. dužina (longitude)"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="50dp" />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/obj_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightpurple"
            android:inputType="textMultiLine"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geo. širina (latitude)"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="10dp" />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/obj_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightpurple"
            android:inputType="textMultiLine"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.3" />

        <Button
            android:id="@+id/btnCancelInfoObj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_btn_light"
            android:text="Poništi"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="end"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnAddInfoObj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_btn"
            android:text="Potvrdi"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="end"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.3" />
    </LinearLayout>

</LinearLayout>